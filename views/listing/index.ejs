<% layout("/layouts/boilerplate") -%>
<!-- <%= success %> -->
 <style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        margin-top: 1rem;
        text-align: center;
        margin-right: 2rem;
        margin-top: 1rem;
        opacity: 0.7;
    }
    .filter:hover{
        /* transform: translateY(-10px) scale(1.03); */
        /* box-shadow: 0 12px 24px rgba(0,0,0,0.2); */
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggled{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }
    .filt{
        margin-top: 1rem;
    }
    @media (max-width: 992px) {  /* tablets */
    .filter i {
        font-size: 1.5rem;
    }
    .filter p {
        font-size: 0.8rem;
    }
    }

    @media (max-width: 768px) {  /* mobile screens */
    #filters {
        justify-content: space-around;
    }
    .filter {
        flex: 1 1 80px;
        margin: 0.5rem;
    }
    .filter i {
        font-size: 1.2rem;
    }
    .filter p {
        font-size: 0.75rem;
    }
    .tax-toggled {
        margin: 1rem auto;
        justify-content: center;
    }
    }
    @media (max-width: 992px) {
  .navbar-collapse {
    position: relative !important;
    top: 0;
    left: 0;
    width: 100%;
    background-color: white; /* or your navbar bg color */
    z-index: 1;
  }

  /* Optional: Add some space below the navbar when expanded */
  .navbar-collapse.show + .content {
    margin-top: 200px; /* adjust if needed */
  }
}
@media (max-width: 992px) {
  .navbar-collapse {
    transition: all 0.3s ease;
  }
}
</style>
 <div class="content">
<div class="d-flex justify-content-center mb-3">
  <button class="btn btn-outline-dark d-lg-none filt" type="button" data-bs-toggle="collapse" data-bs-target="#filterMenu" aria-expanded="false" aria-controls="filterMenu">
    <i class="fa-solid fa-filter"></i> Filters
  </button>
</div>
<div class="collapse d-lg-block" id="filterMenu">
 <div id="filters">
    <div class="filter">
        <a href="/listing/category/Trending" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Rooms" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Iconic cities" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Mountains" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Castles" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Amazingpools" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Camping" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Farms" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Arctic" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Domes" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Boats" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listing/category/Beach" style="text-decoration: none; color: inherit; height: 3rem;">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
        </a>
    </div>
    <div class="tax-toggled">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
 </div>
 </div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){ %>
        <a href="/listing/<%= listing._id%>" class="listing-link">
            <div class="card col ">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
            <div class="card-img-overlay">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%=listing.title%></b><br>
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %>/night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                </p>
            </div>
    </div>
    </a>
    <%}%>
</div>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display === "inline"){
                info.style.display = "none";
            }else{
                info.style.display = "inline";
            }
        }
    })
</script>