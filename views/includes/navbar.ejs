<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top main-navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listing"><i class="fa-solid fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listing"><button class="btn all-btns">Home</button></a>
        <a class="nav-link" href="/listing/new"><button class="btn all-btns">Add new Listing</button></a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/listing/search" method="get">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search country" aria-label="Search" name="search">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <% if(!currUser){%>
          <a class="nav-link" href="/signup"><b><button class="btn all-btns">Signup</button></b></a>
          <a class="nav-link" href="/login"><b><button class="btn all-btns">Login</button></b></a>
        <%}%>
        <%if(currUser){%>
          <a class="nav-link" href="/logout"><button class="btn all-btns">Logout</button></a>
        <%}%>
      </div>
    </div>
  </div>
