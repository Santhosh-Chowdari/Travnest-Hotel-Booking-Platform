<style>
  .main-navbar{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }
  .search-btn{
    background-color: black;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover{
    background-color: black;
    color: white;
  }
  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.9rem;
  }
  .all-btns{
    background-color: #fe424d;
    border-radius: 15px;
    height: 2.5rem;
    margin-left: 1.25rem;
  }
  .all-btns{
    color: white;
  }
  .all-btns:hover{
    background-color: #fe424d;
    border-radius: 15px;
    height: 2.5rem;
  }
  .all-btns:hover{
    color: white;
  }
  a p{
    display: inline;
  }
